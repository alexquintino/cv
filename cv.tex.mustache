{{=<% %>=}}
%!TEX TS-program = xelatex
\documentclass[]{friggeri-cv}

\begin{document}
<%#bio%>
\header{<%first_name%>}{<%last_name%>}{}

% In the aside, each new line forces a line break
\begin{aside}
  \section{about}
    Address address
    address
    address
    \href{mailto:<%email%>}{<%email%>}
    \href{<%website%>}{<%website%>}
\end{aside}
<%/bio%>

\section{interests}
<%interests%>

\section{experience}
\begin{experience}
  <%#experience%>
    \experienceentry
      {<%start_date%> to}
      {<%end_date%>}
      {<%title%> @ <%company%>}
      {<%location%>}
      <%#responsibilities%>
        {<%main%>}
        {<%#items.length%>
          \begin{itemize}[leftmargin=*]
          \itemsep 0.8em
            <%#items%>
              \item <%& .%>
            <%/items%>
          \end{itemize}
        <%/items.length%>}
      <%/responsibilities%>
  <%/experience%>
\end{experience}

\section{education}
\begin{entrylist}
  <%#education%>
  \entry
    {<%start_date%> - <%end_date%>}
    {<%type%> - <%name%>}
    {<%institution%>}
    {<%location%>}
  <%/education%>
\end{entrylist}

\end{document}
